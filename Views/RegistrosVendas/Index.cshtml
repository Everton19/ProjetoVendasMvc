@{
    ViewData["Title"] = "Registros de Vendas";
}

<h2>@ViewData["Title"]</h2>
<div class="row">
    <div class="col-md-6">
        <form class="form-horizontal" asp-action="BuscaSimples">
            <fieldset>
                <legend>Busca Simples</legend>
                <div class="form-group">
                    <label for="dataMin" class="col-lg-2 control-label">Data Min: </label>
                    <div class="col-lg-10">
                        <input type="date" name="dataMin" class="form-control" />
                    </div>
                </div>
                <div class="form-group">
                    <label for="dataMax" class="col-lg-2 control-label">Data Max: </label>
                    <div class="col-lg-10">
                        <input type="date" name="dataMax" class="form-control" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-lg-10 col-lg-offset-2">
                        <button type="submit" class="btn btn-primary">Enviar</button>
                    </div>
                </div>
            </fieldset>
        </form>
    </div>
</div>

<div class="row">
    <div class="col-md-6">
        <form class="form-horizontal" asp-action="BuscaEmGrupo">
            <fieldset>
                <legend>Busca em Grupo</legend>
                <div class="form-group">
                    <label for="dataMin" class="col-lg-2 control-label">Data Min: </label>
                    <div class="col-lg-10">
                        <input type="date" name="dataMin" class="form-control" />
                    </div>
                </div>
                <div class="form-group">
                    <label for="dataMax" class="col-lg-2 control-label">Data Max: </label>
                    <div class="col-lg-10">
                        <input type="date" name="dataMax" class="form-control" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-lg-10 col-lg-offset-2">
                        <button type="submit" class="btn btn-primary">Enviar</button>
                    </div>
                </div>
            </fieldset>
        </form>
    </div>
</div>